<main class="search">
    <!-- Search Page (Only for logged-in users) -->
    <section id="search">
        <h2>Search by Location</h2>

        <form class="search-wrapper cf" action="/animals/search" method="GET">
            <input id="#search-input" type="text" name="location" placeholder="Search here..." required value="{{location}}"/>
            <button type="submit">Search</button>
        </form>

        <div id="search-container">
            {{#if animals}}
            <ul class="card-wrapper">
                {{#each animals}}
                <!-- Display a li with information about every post (if any)-->
                {{> animal}}
                {{/each}}
            </ul>

            {{else}}
            <!-- Display an h2 if there are no posts -->
            <div id="no-post">
                <h2>There are no results found.</h2>
            </div>
            {{/if}}
        </div>
    </section>
</main>